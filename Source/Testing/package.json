{
    "name": "@dolittle/typescript.testing",
    "version": "6.0.0-rc.20",
    "description": "Building blocks for setting up testing in Dolittle TypeScript projects",
    "repository": {
        "type": "git",
        "url": "https://github.com/dolittle/TypeScript.Build.git"
    },
    "homepage": "https://dolittle.io",
    "license": "ISC",
    "publishConfig": {
        "access": "public"
    },
    "main": "Distribution/index.js",
    "types": "Distribution/index.d.ts",
    "files": [
        "Distribution",
        ".mocharc.js"
    ],
    "scripts": {
        "prebuild": "yarn clean",
        "postbuild": "yarn lint",
        "build": "tsc -b tsconfig.json ",
        "clean": "tsc -b --clean ",
        "lint:fix": "eslint \"**/*.ts\" --fix",
        "lint": "eslint \"**/*.ts\"",
        "test": "mocha",
        "ci": "yarn build && yarn test"
    },
    "dependencies": {
        "@types/chai": "4.2.22",
        "@types/chai-as-promised": "7.1.4",
        "@types/mocha": "9.0.0",
        "@types/sinon": "10.0.6",
        "@types/sinon-chai": "3.2.5",
        "chai": "4.3.4",
        "chai-as-promised": "7.1.1",
        "mocha": "9.1.3",
        "sinon": "12.0.1",
        "sinon-chai": "3.7.0",
        "ts-sinon": "2.0.2",
        "ts-node": "10.4.0"
    },
    "devDependencies": {
        "@dolittle/typescript.build": "6.0.0-rc.20"
    }
}

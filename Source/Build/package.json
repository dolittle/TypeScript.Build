{
    "name": "@dolittle/typescript.build",
    "version": "6.0.0-rc.20",
    "description": "Base build pipeline for Dolittle TypeScript projects",
    "repository": {
        "type": "git",
        "url": "https://github.com/dolittle/TypeScript.Build.git"
    },
    "homepage": "https://dolittle.io/tooling/typescript/build",
